<h1>Welcome to the Index </h1>

<h3>Your Gold
<input type="number" name="your-gold" value="<%=@gold%>">
</h3>


<div class="farm">
  <h4>Farm</h4>
  <p>earns 10-20 golds</p>
  <form class="" action="/rpg/farm" method="post">
    <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
    <input type="submit" name="farm" value="Find Gold">

  </form>

</div>
<!-- ==================================================== -->
<div class="cave">
  <h4>Cave</h4>
  <p>earns 5-10 golds</p>
  <form class="" action="/rpg/cave" method="post">
    <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
    <input type="submit" name="cave" value="Find Gold">

  </form>
</div>
<!-- ==================================================== -->
<div class="house">
  <h4>House</h4>
  <p>earns 2-5 golds</p>
  <form class="" action="/rpg/house" method="post">
    <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
    <button type="submit" name="house">Find Gold</button>
  </form>

</div>
<!-- ==================================================== -->
